<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseVerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/indent_24</item>
        <item name="navigationIconTint">@color/title_text</item>
        <item name="titleTextAppearance">@style/TextBase</item>
    </style>

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="SubtitleText" parent="TextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_19</item>
    </style>

    <style name="TabLayoutText" parent="TextBase">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="ButtonBase" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetLeft">@dimen/indent_0</item>
        <item name="android:insetTop">@dimen/indent_0</item>
        <item name="android:insetRight">@dimen/indent_0</item>
        <item name="android:insetBottom">@dimen/indent_0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainCategoryButton" parent="ButtonBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/indent_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/indent_16</item>
        <item name="android:layout_marginRight">@dimen/indent_16</item>
        <item name="android:layout_marginBottom">@dimen/indent_16</item>
        <item name="android:textColor">@color/main_menu_item</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/indent_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indent_8</item>
        <item name="iconTint">@color/main_menu_item</item>
    </style>

    <style name="RoundedCornersButton" parent="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/indent_36</item>
        <item name="android:layout_marginTop">@dimen/indent_24</item>
        <item name="android:layout_marginBottom">@dimen/indent_24</item>
        <item name="android:backgroundTint">@color/title_text</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="cornerRadius">@dimen/indent_36</item>
    </style>

    <style name="RoundButton" parent="ButtonBase">
        <item name="android:layout_width">@dimen/round_button_size</item>
        <item name="android:layout_height">@dimen/round_button_size</item>
        <item name="android:backgroundTint">@color/round_button</item>
        <item name="cornerRadius">@dimen/round_button_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indent_0</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="RegularTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextViewLabel" parent="RegularTextViewStyle">
        <item name="android:paddingVertical">@dimen/indent_8</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="TextViewValue" parent="RegularTextViewStyle">
        <item name="android:paddingStart">@dimen/indent_8</item>
        <item name="android:paddingVertical">@dimen/indent_8</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
    </style>

    <style name="MenuItem" parent="RegularTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/indent_16</item>
        <item name="android:paddingTop">@dimen/indent_21</item>
        <item name="android:paddingRight">@dimen/indent_16</item>
        <item name="android:paddingBottom">@dimen/indent_21</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="drawableTint">@color/menu_item_icon</item>
    </style>

    <style name="Switch" parent="MenuItem">
        <item name="android:theme">@style/SwitchColors</item>
    </style>

    <style name="SwitchColors">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/menu_item_icon</item>
        <item name="android:colorForeground">@color/switch_inactive_track</item>
    </style>

    <style name="VerticalCenteredView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/artist_name</item>
    </style>

    <style name="TrackSubtext" parent="VerticalCenteredView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artist_name</item>
        <item name="android:textSize">@dimen/text_11</item>
    </style>

</resources>