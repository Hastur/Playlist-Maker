<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    style="@style/BaseVerticalLinearLayout">

    <TextView
        style="@style/ScreenTitle"
        android:text="@string/app_name" />

    <Button
        style="@style/CategoryButton"
        android:layout_marginTop="@dimen/indent_22"
        android:layout_marginBottom="@dimen/indent_4"
        android:text="@string/search"
        app:icon="@drawable/search_icon" />

    <Button
        style="@style/CategoryButton"
        android:layout_marginTop="@dimen/indent_4"
        android:layout_marginBottom="@dimen/indent_4"
        android:text="@string/library"
        app:icon="@drawable/library_icon" />

    <Button
        style="@style/CategoryButton"
        android:layout_marginTop="@dimen/indent_4"
        android:layout_marginBottom="@dimen/indent_22"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon" />

</LinearLayout>