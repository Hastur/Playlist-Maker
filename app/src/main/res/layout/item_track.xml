<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/indent_13"
    android:paddingTop="@dimen/indent_8"
    android:paddingEnd="@dimen/indent_13"
    android:paddingBottom="@dimen/indent_8">

    <ImageView
        android:id="@+id/track_cover"
        android:layout_width="@dimen/track_list_track_cover"
        android:layout_height="@dimen/track_list_track_cover"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        tools:src="@drawable/ic_search" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/indent_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            style="@style/RegularTextViewStyle"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Very very very very very very very very long song name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/TrackSubtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Very very very very very very very very very very very long artist name" />

            <TextView
                style="@style/TrackSubtext"
                android:paddingHorizontal="5dp"
                android:text="@string/bullet_point" />

            <TextView
                android:id="@+id/track_time"
                style="@style/TrackSubtext"
                tools:text="3:23" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_next"
        app:tint="@color/artist_name" />

</LinearLayout>